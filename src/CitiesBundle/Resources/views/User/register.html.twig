{% extends "CitiesBundle::layout.html.twig" %}

{% block main_content %}
    <div class="col-sm-12">
        <h1>Inscription</h1>
    </div>
    <!-- todo Appel des iframes -->
    <div class="col-sm-12">
        {{ form_start(form, {'class':'form-horizontal', 'method':'post'}) }}
        <div class="form-group">
            {{ form_label(form.username, null, { 'label_attr': {'class':'control-label col-sm-4'} }) }}
            <div class="col-sm-8">
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password.first, null, { 'label_attr': {'class':'control-label col-sm-4'} }) }}
            <div class="col-sm-8">
                {{ form_widget(form.password.first) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password.second, null, { 'label_attr': {'class':'control-label col-sm-4'} }) }}
            <div class="col-sm-8">
                {{ form_widget(form.password.second) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.email, null, { 'label_attr': {'class':'control-label col-sm-4'} }) }}
            <div class="col-sm-4">
                {{ form_widget(form.email) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">DÃ©poser</button>
        {{ form_end(form) }}
    </div>
{% endblock %}