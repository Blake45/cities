{% if pagination.nbPages > 0 %}
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            {% if pagination.page > 1 %}
                <li class="page-item {% if pagination.page == 1 %}disabled"{% endif %}">
                    <a class="page-link" href="{{ path(pagination.nomRoute, pagination.paramsRoute|merge({'page': pagination.page-1})) ~ pagination.querystring }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            {% endif %}

            {# Affichage de toutes les pages entre p-4 et p+4 sauf si < 1 ou > nbPages #}
            {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.nbPages)) %}

                <li class="page-item {% if p == pagination.page %}active{% endif %}">
                    <a class="page-link" href="{{ path(pagination.nomRoute, pagination.paramsRoute|merge({'page': p})) ~ pagination.querystring }}">
                        {{ p }}
                    </a>
                </li>

            {% endfor %}

            {% if pagination.page < pagination.nbPages %}
                <li class="page-item {% if pagination.page == pagination.nbPages %}disabled"{% endif %}">
                    <a class="page-link" href="{{ path(pagination.nomRoute, pagination.paramsRoute|merge({'page': pagination.page+1})) ~ pagination.querystring }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}